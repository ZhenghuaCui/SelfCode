<UserControl x:Class="Wuhua.Main.Common.Components.OkCancelPannel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Metro="clr-namespace:AduSkin.Controls.Metro;assembly=AduSkin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Metro:AduFlatButton Content="取消" Background="Transparent" Foreground="{StaticResource DefaultBrush}" Click="Cancel_OnClick" 
								 BorderThickness="1" BorderBrush="{StaticResource DefaultBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Metro:AduFlatButton Grid.Column="1" Background="Transparent" Foreground="{StaticResource DefaultBrush}" Click="Ok_OnClick"
								 BorderThickness="1" BorderBrush="{StaticResource DefaultBrush}" Content="确定"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
